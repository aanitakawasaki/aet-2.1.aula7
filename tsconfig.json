{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "./dist", //sa√≠da para a pasta dist
    "rootDir": "./", //define a raiz, para incluir src e public
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"]
  },
  "include": [
    "src/**/*.ts", //inclui todos os ts em src
    "public/**/*.ts" //inclui todos os ts em public
  ]
}